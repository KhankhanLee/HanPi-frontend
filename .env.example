# Environment Variables for HanPi Frontend

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_VERSION=v1

# Pi Network Configuration
VITE_PI_API_KEY=your_pi_api_key_here
VITE_PI_APP_ID=your_app_id_here
VITE_PI_SANDBOX_MODE=true

# Application Configuration
VITE_APP_TITLE=HanPi
VITE_APP_DESCRIPTION=Pi Network Document Sharing Platform
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false

# Development Configuration
VITE_DEV_MODE=false
VITE_SHOW_DEBUG=false

# External Services
VITE_UPLOAD_MAX_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md

# Theme and UI
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LANGUAGE=ko

# Security
VITE_SESSION_TIMEOUT=3600000
VITE_CSRF_PROTECTION=true

# Production Example:
# VITE_API_BASE_URL=https://api.hanpi.com/api
# VITE_PI_SANDBOX_MODE=false
# VITE_ENABLE_ANALYTICS=true
# VITE_DEV_MODE=false
